                    <label>Terms and Conditions filename #2</label>
                    <depends>
                        <field id="is_enabled_attach_tac">1</field>
                    </depends>
                </field>
                <field id="tac_file_3" translate="label comment" type="Magento\Config\Block\System\Config\Form\Field\File" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Terms and Conditions file #3</label>
