                    <comment>Allowed upload file types: .pdf, .doc, .docx, .txt</comment>
                    <base_url type="media" scope_info="1">mageplaza/email_attachments</base_url>
                    <depends>
                        <field id="is_enabled_attach_tac">1</field>
                    </depends>
                </field>
                <field id="tac_filename_4" translate="label" sortOrder="150" type="text" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Terms and Conditions filename #4</label>
                    <depends>
                        <field id="is_enabled_attach_tac">1</field>
                    </depends>
                </field>
                <field id="tac_file_5" translate="label comment" type="Magento\Config\Block\System\Config\Form\Field\File" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Terms and Conditions file #5</label>
                    <backend_model>Mageplaza\EmailAttachments\Model\Config\Backend\TaCFile</backend_model>
                    <comment>Allowed upload file types: .pdf, .doc, .docx, .txt</comment>
                    <base_url type="media" scope_info="1">mageplaza/email_attachments</base_url>
                    <depends>
                        <field id="is_enabled_attach_tac">1</field>
