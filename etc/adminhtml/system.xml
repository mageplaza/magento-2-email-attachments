                <field id="tac_filename_3" translate="label" sortOrder="130" type="text" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Terms and Conditions filename #3</label>
                    <depends>
                        <field id="is_enabled_attach_tac">1</field>
                    </depends>
                </field>
                <field id="tac_file_4" translate="label comment" type="Magento\Config\Block\System\Config\Form\Field\File" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Terms and Conditions file #4</label>
